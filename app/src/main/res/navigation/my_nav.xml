<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/viewPagerFragment">

    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="ru.sedavnyh.vkgroupscan.fragments.ViewPagerFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager" >
        <action
            android:id="@+id/action_viewPagerFragment_to_imageFragment"
            app:destination="@id/imageFragment"
            app:enterAnim="@anim/from_right"
            app:exitAnim="@anim/to_left"
            app:popEnterAnim="@anim/from_left"
            app:popExitAnim="@anim/to_right" />
    </fragment>
    <fragment
        android:id="@+id/imageFragment"
        android:name="ru.sedavnyh.vkgroupscan.fragments.ImageFragment"
        android:label="ImageFragment" >
        <argument
            android:name="postEntityArg"
            app:argType="ru.sedavnyh.vkgroupscan.models.entities.PostEntity" />
        <action
            android:id="@+id/action_imageFragment_to_viewPagerFragment2"
            app:destination="@id/viewPagerFragment"
            app:enterAnim="@anim/from_left"
            app:exitAnim="@anim/to_right" />
        <action
            android:id="@+id/action_imageFragment_to_findImageFragment"
            app:destination="@id/findImageFragment" />
    </fragment>
    <fragment
        android:id="@+id/findImageFragment"
        android:name="ru.sedavnyh.vkgroupscan.fragments.FindImageFragment"
        android:label="fragment_find_image"
        tools:layout="@layout/fragment_find_image" >
        <action
            android:id="@+id/action_findImageFragment_to_imageFragment"
            app:destination="@id/imageFragment" />
        <argument
            android:name="LinkToImage"
            app:argType="string" />
    </fragment>
</navigation>